<launch>

  <arg name="spinnaker_camera_manager"/>
  <arg name="respawn" default="false" />
  <arg     if="$(arg respawn)" name="bond" value="" />
  <arg unless="$(arg respawn)" name="bond" value="--no-bond" />

  <arg name="spinnaker_camera_param_path" default="$(find spinnaker_camera_node)/param/bfs_ros1.yaml" />

  <node pkg="nodelet" type="nodelet" name="spinnaker_camera" args="load autoware/drivers/camera/spinnaker_camera_node $(arg spinnaker_camera_manager) $(arg bond)" respawn="$(arg respawn)">
    <rosparam command="load" file="$(arg spinnaker_camera_param_path)" />
  </node>

</launch>
